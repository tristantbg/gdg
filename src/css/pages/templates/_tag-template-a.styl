[page-type=article], [page-type=exhibition]
	&[page-template=a]
		#container
			margin-top 7rem
		.header-template
			min-height 105vw
		.sticky-title
			top 12vh
			margin-top 14vw
			span(10/16, $offset: 3/16)
			text-align center
		.template-component
			z-index 0
			&.image-1
				span(6/16, $offset: 2/16)
				padding-right $gutter
			&.image-2
				top 19vw
				span(8/16, $offset: 8/16)
			&.image-3
				top 61vw
				span(10/16)
				padding-right $gutter
			&.image-4
				top 70vw
				span(5/16, $offset: 10/16)
				padding-right $gutter
			&.poster
				top 61vw
				span(4/16, $offset: 11/16)
				padding-right $gutter
