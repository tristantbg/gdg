[page-type=home][page-template=c], 
[page-type=exhibition-category]
	+above($md + 1)
		#container
			margin-top 7rem
		.template-component
			position initial
			z-index 0
			&.featuredpage-1
				span(8/16, $offset: 2/16)
				.responsive-image
					width 88%
					margin-left 12%
				.page-infos
					margin-top -5.1rem
					position relative
					z-index 1
			&.featuredpage-2
				span(6/16)
				padding-left $gutter
				margin-top 10vw
			.page-infos
				& > *:not(.title):not(.caption-title)
					width 70%
				.tags
					margin-top 1em

[page-type=exhibition-category]
	+above($md + 1)
		.template-component
			&.featuredpage-1
				.page-infos
					margin-top 0
			.text
				margin-top 1rem
