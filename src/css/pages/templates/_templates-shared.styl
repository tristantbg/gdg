section.header-template
	span(1)
	min-height 100vh
	position relative
	padding-bottom 8rem
	.responsive-image
		background alpha($menu-color, 0.5)

.template-component
	position absolute
	top 0
	left 0
	&.video-cover
	 overflow hidden
	 video
			width 100%
			height 100%
			object-fit cover
	.video-container
		height 100%
		overflow hidden
	.slider
		.flickity-prev-next-button
			&.previous
				left 0
			&.next
				right 0

.sticky-title
	position sticky
	position -webkit-sticky
	z-index 10
	pointer-events none
	h1 + .caption-title
		margin-top 2rem

[page-type=home]
	#home-index
		margin-top 12rem
