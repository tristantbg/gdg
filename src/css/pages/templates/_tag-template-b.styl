[page-type=articles], [page-type=exhibition]
	&[page-template=b]
		+above($md + 1)
			#container
				margin-top 7rem
			.header-template
				min-height 94vw
			.sticky-title
				top 12vh
				margin-top 28vw
				span(10/16, $offset: 3/16)
				text-align center
			.template-component
				z-index 0
				&.image-1
					span(6/16, $offset: 2/16)
					padding-right $gutter
				&.image-2
					top 13vw
					span(8/16, $offset: 8/16)
				&.image-3
					top 38vw
					span(7/16)
					padding-right $gutter
				&.image-4
					top 56vw
					span(5/16, $offset: 7/16)
					padding-right $gutter
				&.poster
					top 56vw
					span(4/16, $offset: 8/16)
					padding-right $gutter
				.slider
					height 41vw
					img
						object-fit cover
		+below($md)
			.template-component
				&.image-1
					span(1)
					padding-left $gutter
				&.image-2
					span(5/8)
				&.image-3
					span(6/8, $offset: 1/8)
				&.image-4
					span(1)
				&.poster
					span(3/4, $offset: 1/4)
