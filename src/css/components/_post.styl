#post-header
	text-align center
	margin ($font-heading+$font*2) 0
	#post-date
		margin-bottom 1em
	#post-category
		text-decoration underline
		text-decoration-skip ink
	.serif.condensed
		small
			font-size 3rem

#post-hero, #post-description
	margin-bottom $spacebetween

#post-description
	position relative

#post-captions
	span(2/12)
	line-height 1.3
	+above($md + 1)
		position absolute
		right 0
		z-index 10
	+below($md)
		stack()
		margin-top $spacebetween
	#main-caption
		margin-bottom 3em
	.additional-caption
		margin-bottom 1em
		.sans-serif
			margin-bottom .2em
		&:nth-last-child(2)
			margin-bottom 3em
	.share-buttons
		.sans-serif::after
			content ':'
			
		