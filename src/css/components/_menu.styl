#menu
	position fixed
	// top 0
	// padding-top ($font*4)
	top ($font*4)
	left 0
	z-index 190
	display grid
	width 100%
	background var(--bg-color)
	grid-template-columns 14.25% 14.25% 1fr 1fr 28.5%
	grid-template-rows 1fr 1fr
	grid-template-areas "title title categories links board" "la-time fr-time categories links board"
	border-bottom 1px solid
	grid-gap 1px
	transition transform 450ms $kinetic, visibility 450ms
	transform translateY(-105%) translateZ(0)
	visibility hidden
	&.is-visible, &:hover
		transform none
		visibility visible
		transition transform 450ms $kinetic, visibility 0ms
	& > div
		box-shadow 0px 0px 0px 1px var(--font-color)
		padding ($padding)
		text-align center
		overflow hidden
#menu--title
	grid-area title
	svg
		display block
		width 100%
		path
			fill currentColor
#menu--previous, #menu--next
	display none
	position relative
	a
		display flex
		justify-content center
		align-items center
		padding $padding
		position absolute
		top 0
		left 0
		width 100%
		height 100%
#menu-previous
	grid-area previous
#menu-next
	grid-area next
#menu--la-time
	grid-area la-time
#menu--fr-time
	grid-area fr-time
#menu--la-time, #menu--fr-time
	display flex
	justify-content center
	align-items center
	padding ($padding)
	.time
		serif()
	.time-city
		margin-bottom 0.5em
#menu--categories
	grid-area categories
	display flex
	justify-content center
	align-items center
#menu--links
	grid-area links
	display flex
	justify-content center
	align-items center
	flex-direction column
	#sr-basket-widget
		margin-bottom 1em
	#socials
		margin-top 1em
#menu--board
	grid-area board
	overflow hidden
	.flickity-slider
		transform none !important
	.slide
		display flex
		justify-content center
		align-items center
		flex-direction column
		left 0 !important
		opacity 0
		width 100%
		height 100%
		.tiny
			margin-bottom 2rem
		.author
			margin-top 1em
	.slide.is-selected
		opacity 1
		z-index 1

[page-type=post], [page-type=product]
	#menu
		grid-template-areas "previous next categories links board" "la-time fr-time categories links board"
	#menu--title
		display none
	#menu--previous, #menu--next
		display block