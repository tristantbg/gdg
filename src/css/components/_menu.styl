#menu
	position fixed
	top 0
	left 0
	z-index 190
	width 100%
	height 100%
	background alpha($primary, 0.25)
	transition opacity 450ms ease, visibility 450ms
	opacity 0
	visibility hidden
	display flex
	justify-content center
	align-items center

#navigation
	width 100%
	contained()
	display flex
	flex-direction column
	.navigation-item
		menu()
		backface-visibility hidden
		-webkit-backface-visibility hidden
		transition transform 450ms ease, opacity 450ms ease
		opacity 0
		// transform translateY(-50%) translateZ(0)
		transition-delay 450ms

#menu-footer
	position absolute
	bottom $padding
	left 0
	width 100%
	contained()
	display flex
	justify-content space-between
	.logo-icon
		margin-right 0
		margin-left $gutter
		max-width 7rem
		mix-blend-mode darken

body.menu-on
	overflow hidden
	#menu
		opacity 1
		visibility visible
	#navigation
		.navigation-item
			transform none
			opacity 1
			for i in (1..10)
				&:nth-child({i})
					transition-delay (i * 70ms + 180ms)
	#container
		filter: blur(10px)