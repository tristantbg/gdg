#menu
	position fixed
	top 0
	left 0
	z-index 190
	width 100%
	height 100%
	transition opacity 450ms ease, visibility 450ms
	opacity 0
	visibility hidden
	display flex
	justify-content center
	align-items center
	+below($sm)
		padding-bottom 12rem

#navigation
	width 100%
	contained()
	display flex
	flex-direction column
	.navigation-item
		menu()
		backface-visibility hidden
		-webkit-backface-visibility hidden
		transition opacity 450ms ease, color 200ms ease
		opacity 0
		// transform translateY(-50%) translateZ(0)
		transition-delay 450ms
		+above($md + 1)
			&:hover
				color #4A4A4A

#menu-footer
	position absolute
	bottom $padding
	left 0
	width 100%
	contained()
	display flex
	justify-content space-between
	.logo-icon
		margin-right 0
		margin-left 1rem
		max-width 10rem
		mix-blend-mode darken
		+below($sm)
			max-width 10rem
			margin 0

body.menu-on
	overflow hidden
	&::before
		opacity 1
		visibility visible
	#menu
		opacity 1
		visibility visible
	#navigation
		.navigation-item
			transform none
			opacity 1
			for i in (1..10)
				&:nth-child({i})
					transition opacity 450ms ease (i * 70ms + 180ms), color 200ms ease
	#container
		filter: blur(10px)
		// opacity 0.75
