#burger
  width 2.4rem
  height 1.9rem
  margin $padding
  position fixed
  left 20%
  top 0
  transform rotate(0deg)
  transition all .25s
  z-index 210
  cursor pointer
  &::after
    content ''
    position absolute
    width 100%
    height 100%
    padding $padding
    top (-1 * $padding)
    left (-1 * $padding)
  span
    display block
    position absolute
    height 0.3rem
    width 100%
    background $secondary
    background var(--font-color)
    opacity 1
    left 0
    transform rotate(0deg)
    transition all .25s ease
  span:nth-child(1)
    top 0px
    transition-delay .25s
  span:nth-child(2), span:nth-child(3)
    transition-delay 0s
    top 0.8rem
  span:nth-child(4)
    transition-delay .25s
    bottom 0
  &.opened
    span:nth-child(1), span:nth-child(4)
      transition-delay 0s
      opacity 0
      top 0.8rem
    span:nth-child(2)
      transition-delay .25s
      transform rotate(45deg)
    span:nth-child(3)
      transition-delay(.25s)
      transform rotate(-45deg)
